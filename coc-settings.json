{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "html.filetypes": [
    "html",
    "handlebars",
    "htmldjango",
    "blade",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "pairs.enableCharacters": ["(", "[", "{", "'", "\"", "`"],
  "json.format.enable": false,
  "html.format.enable": false
}
